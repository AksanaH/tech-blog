<div class="container-create-post">
    <div class="header-post">
        <h2>Edit Post</h2>
    </div>
    <form class="form edit-post-form">
        <div class="form-group">
            <label for="post-title">Title</label>
            <input class="form-input" type="text" id="post-title" value="{{title }}" />
        </div>
        <div class="form-group">
            <label for="post-content">Content</label>
            <textarea class="form-input" id="post-content" rows="4" cols="50" value="{{text }}">{{text }}</textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Update Post</button>
        </div>
        <div class="form-group">
            <button class="btn btn-primary delete" type="submit" data-id="{{id}}">Delete</button>
        </div>
    </form>
</div>

<script src=" /js/updatePost.js"></script>