{{#each posts as |post| }}
<div class="{{^if ../dashboard}}container-post{{else}}container-dashboard{{/if}}">
    <div class="{{^if ../dashboard}}header-post{{else}}dashboard-post{{/if}}">

        <h2>
            {{#if ../dashboard}}
            <a class="post-title" href="/post/{{post.id}}">{{post.title}}</a>
            {{else}}
            {{#if ../logged_in}}
            <a class="post-title" href="/posts/comment/{{post.id}}">{{post.title}}</a>
            {{else}}
            <span class="post-title">{{post.title}}</span>
            {{/if}}
            {{/if}}
        </h2>
        <p>Posted by {{post.user.username}} on {{format_date post.date_created}}</p>
    </div>
    {{^if ../dashboard}}
    <div class="text">
        <p>
            {{post.text}}
        </p>
    </div>
</div>
{{#each comments as |com| }}
<div class="{{^if ../dashboard}}container-post{{else}}container-dashboard{{/if}}">
    <div class="{{^if ../dashboard}}header-post{{else}}dashboard-post{{/if}}">
        <p></p>
    </div>
    <div class="text">
        <p>
            {{com.text}}
        <p>{{com.user.username}}, {{format_date com.date_created}}</p>
        </p>
    </div>
</div>
{{/each}}
{{#ifEquals ../id post.id}}
<div class="{{^if ../dashboard}}container-post{{else}}container-dashboard{{/if}}">

    <form class="form new-comment-form">
        <div class="form-group">
            <label for="comment-text">Comment</label>
            <input class="form-input" type="text" id="comment-text" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
</div>
<script src="./../../js/comment.js"></script>
{{/ifEquals}}
{{/if}}
{{/each}}